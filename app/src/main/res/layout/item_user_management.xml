<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:layout_marginEnd="70dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/user_name"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:layout_width="104dp"
            tools:text="Nguyen Van A"
            />
        <TextView
            android:id="@+id/email"
            android:textColor="@color/light_gray"
            android:textSize="16sp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content"
            android:layout_width="180dp"
            tools:text="nguyenvana@gmail.com"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingVertical="2dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="11dp"
                android:background="@drawable/s00000040sw1cr12bffffff"
                android:padding="7dp"
                tools:text="@string/admin"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/is_locked"
                android:textColor="#2E9364"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/cr12bc9eac6"
                tools:text="@string/active"
                android:padding="7dp"
                />
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/lock_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:checked="true"
        app:trackTint="@null"
        app:thumbTint="@null"
        android:thumb="@drawable/switch_thumb_selector"
        app:track="@drawable/switch_track_selector"
        />
</LinearLayout>