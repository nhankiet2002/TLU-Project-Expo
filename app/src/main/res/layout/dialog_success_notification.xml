<!-- res/layout/dialog_success_notification.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/dialog_rounded_background"> <!-- Tạo drawable này -->

    <TextView
        android:id="@+id/tv_success_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo dự án thành công"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/iv_close_success_dialog"/>

    <ImageView
        android:id="@+id/iv_close_success_dialog"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_x"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:padding="6dp"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:contentDescription="Đóng"/>
</RelativeLayout>