<!-- res/values/styles.xml -->
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.App.Button.GrayAction" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">14sp</item> <!-- Adjust as needed -->
    </style>
    <style name="ActionMaterialButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="iconTint">@android:color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">12dp</item>
        <item name="backgroundTint">@color/button_gray_action_background_color</item> <!-- Đảm bảo màu này tồn tại -->
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>
    <!-- Thêm Style cho PopupMenu -->
    <style name="App.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_background</item>
    </style>

    <style name="MyCustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_rounded_background</item>
    </style>


    <!-- Style cho các nút bấm trong dialog tùy chỉnh -->
    <style name="MyCustomDialogButton" parent="Widget.MaterialComponents.Button">
        <!-- Nền màu đen -->
        <item name="backgroundTint">@android:color/black</item>

        <!-- Chữ màu trắng -->
        <item name="android:textColor">@android:color/white</item>

        <!-- Kiểu chữ in đậm -->
        <item name="android:textStyle">bold</item>

        <!-- Cỡ chữ -->
        <item name="android:textSize">14sp</item>

        <!-- Tắt viết hoa -->
        <item name="android:textAllCaps">false</item>

        <!-- Bo góc cho nút -->
        <item name="cornerRadius">8dp</item>

        <!-- Hiệu ứng gợn sóng khi nhấn -->
        <item name="rippleColor">#4DFFFFFF</item>
    </style>

    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Màu của viền và hint khi không focus -->
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>

        <!-- Màu của hint khi focus -->
        <item name="hintTextColor">@color/text_input_layout_stroke_color</item>
    </style>

</resources>