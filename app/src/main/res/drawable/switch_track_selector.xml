<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/switch_track_green_on" />
            <corners android:radius="200dp" />
            <size
                android:height="32dp"
                android:width="80dp" />
        </shape>
    </item>

    <!-- Trạng thái TẮT (default) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/switch_track_gray_off" />
            <corners android:radius="200dp" />
            <size
                android:height="32dp"
                android:width="80dp" />
        </shape>
    </item>
</selector>
