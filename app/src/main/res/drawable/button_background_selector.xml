<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Khi Button được focus -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" /> <!-- Màu nền đen -->
            <!-- Bạn có thể thêm các thuộc tính khác như bo góc, viền ở đây nếu muốn -->
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#CCCCCC" />
        </shape>
    </item>

    <!-- Trạng thái mặc định (không focus) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Màu nền trắng -->
            <!-- Bạn có thể thêm viền để button dễ nhìn hơn trên nền trắng -->
            <stroke android:width="1dp" android:color="#AAAAAA" />
            <!-- <corners android:radius="8dp" /> -->
        </shape>
    </item>
</selector>